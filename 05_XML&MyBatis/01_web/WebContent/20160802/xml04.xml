<?xml version="1.0" encoding="UTF-8"?>
<!-- "DTD" 를 만들어 구조를 정확하게 기술했을 때만 문서를 생성하게 할 수 있다. -->
<!DOCTYPE 자동차 [
	<!ELEMENT 자동차 (기본, 모델, 옵션)>
	<!ELEMENT 기본 (회사명, 차종, 가격)>
	<!ELEMENT 모델 (색상, 배기량)>
	<!ELEMENT 옵션 (cd, 에어백)>
	<!ELEMENT cd (#PCDATA) > 
	<!-- PCDATA: Parsed Character DATA -->
	<!ELEMENT 에어백 (#PCDATA) >
	<!ELEMENT 색상 (#PCDATA) >
	<!ELEMENT 배기량 (#PCDATA) >
	<!ELEMENT 회사명 (#PCDATA) >
	<!ELEMENT 차종 (#PCDATA) >
	<!ELEMENT 가격 (#PCDATA) >
]>

<자동차>
	<기본>
		<회사명>한국지엠</회사명>
		<차종>베리타스</차종>
		<가격>5000만원</가격>
	</기본>
	<모델>
		<색상>은색</색상>
		<배기량>3564cc</배기량>
	</모델>
	<옵션>
		<cd>YES</cd>
		<에어백>YES</에어백>
	</옵션>
</자동차>